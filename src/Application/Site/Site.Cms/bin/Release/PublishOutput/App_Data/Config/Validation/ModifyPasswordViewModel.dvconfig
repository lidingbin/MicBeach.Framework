{
    "rules": [
        {
            "typeName": "MicBeach.ViewModel.Sys.ModifyPasswordViewModel,MicBeach.ViewModel.Sys, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null",
            "rules": [
                {
                    "name": "NowPassword",
                    "rules": [
                        {
                            "maxValue": "20",
                            "minValue": "5",
                            "vtype": "StringLength",
                            "errorMsg": "请填写5-20个字符内的正确密码",
                            "tipMsg": false
                        },
                        {
                            "vtype": "Required",
                            "errorMsg": "请填写当前密码",
                            "tipMsg": true
                        }
                    ]
                },
                {
                    "name": "NewPassword",
                    "rules": [
                        {
                            "vtype": "Required",
                            "errorMsg": "请填写新的密码",
                            "tipMsg": true
                        },
                        {
                            "maxValue": "20",
                            "minValue": "5",
                            "vtype": "StringLength",
                            "errorMsg": "请填写5-20个字符内的正确密码",
                            "tipMsg": false
                        }
                    ]
                },
                {
                    "name": "ConfirmNewPassword",
                    "rules": [
                        {
                            "vtype": "Required",
                            "errorMsg": "请填写新的密码",
                            "tipMsg": true
                        },
                        {
                            "operator": "Equal",
                            "val": "NewPassword",
                            "compareType": "Field",
                            "vtype": "Compare",
                            "errorMsg": "两次填写的密码不想同",
                            "tipMsg": false
                        }
                    ]
                }
            ]
        }
    ]
}